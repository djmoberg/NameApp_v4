<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.danie.nameapp_v4">

    <application
        android:name=".GlobalClass"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".NameActivity" android:parentActivityName=".MainActivity" />
        <activity android:name=".PictureActivity" android:parentActivityName=".MainActivity" />
        <activity android:name=".LearningActivity" android:parentActivityName=".MainActivity" />
        <activity android:name=".ShowPersonActivity" />
        <activity android:name=".AddPersonActivity" android:parentActivityName=".NameActivity">

        </activity>
    </application>

</manifest>